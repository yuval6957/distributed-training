# Environment variables for Distributed Training Framework
# Copy this file to .env and customize for your environment

# Network Configuration
GPU_HOST=192.168.1.100
CPU_HOST=192.168.1.200
TRAINING_PORT=29500

# Training Settings
BATCH_SIZE=64
NUM_WORKERS=4
EPOCHS=10
LEARNING_RATE=0.001

# GPU Settings
GPU_DEVICE=auto
MIXED_PRECISION=false

# Google Colab Settings
NGROK_AUTH_TOKEN=
NGROK_REGION=us

# Monitoring
LOG_LEVEL=INFO
PROGRESS_BARS=true

# Advanced Settings
FLOW_CONTROL=true
QUEUE_SIZE_LIMIT=200